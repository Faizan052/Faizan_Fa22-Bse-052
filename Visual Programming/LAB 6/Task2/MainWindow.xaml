<Window x:Class="UserRegistration.RegistrationForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Registration" Height="350" Width="400" Background="AliceBlue">

    <Window.Resources>
        <!-- Defining a simple style for Labels -->
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <!-- Defining a simple style for TextBoxes -->
        <Style TargetType="TextBox">
            <Setter Property="Width" Value="250"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <!-- Defining a simple style for Buttons -->
        <Style TargetType="Button">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Full Name:"/>
            <TextBox Name="txtFullName"/>

            <Label Content="Email:"/>
            <TextBox Name="txtEmail"/>

            <Label Content="Password:"/>
            <PasswordBox Name="txtPassword" Width="250" Margin="5"/>

            <Label Content="Confirm Password:"/>
            <PasswordBox Name="txtConfirmPassword" Width="250" Margin="5"/>

            <Button Content="Register" Click="Register_Click"/>
        </StackPanel>
    </Grid>
</Window>
