<Window x:Class="Task2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="CustomComboBox" HorizontalAlignment="Left" Margin="50,50,0,0" VerticalAlignment="Top" Width="200">
            <!-- Text Item -->
            <ComboBoxItem Content="Text Item"/>

            <!-- Ellipse Item -->
            <ComboBoxItem>
                <StackPanel Orientation="Horizontal">
                    <Ellipse Width="20" Height="20" Fill="Blue" Margin="5"/>
                    <TextBlock Text="Ellipse Item" VerticalAlignment="Center"/>
                </StackPanel>
            </ComboBoxItem>

            <!-- Image Item -->
            <ComboBoxItem>
                <StackPanel Orientation="Horizontal">
                    <Image Source="C:\Users\faiza\Pictures\CUI.png" Width="20" Height="20" Margin="5"/>
                    <TextBlock Text="Image Item" VerticalAlignment="Center"/>
                </StackPanel>
            </ComboBoxItem>
        </ComboBox>
    </Grid>
</Window>
